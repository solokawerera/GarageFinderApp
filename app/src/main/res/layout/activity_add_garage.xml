<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/quantum_cyan"
    tools:context=".AddGarageActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_garage_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"/>

        <EditText
            android:layout_marginTop="15dp"
            android:hint="Enter Garage Name"
            android:id="@+id/et_garage_name"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="50dp"/>

        <EditText
            android:layout_marginTop="5dp"
            android:hint="Enter Garage Location"
            android:id="@+id/et_garage_location"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="50dp"/>

        <EditText
            android:layout_marginTop="5dp"
            android:hint="Enter Garage phone Number"
            android:id="@+id/et_garage_phone_number"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="50dp"/>
        <EditText
            android:layout_marginTop="5dp"
            android:hint="Enter Garage email address"
            android:id="@+id/et_garage_email_address"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:layout_marginTop="5dp"
            android:hint="Please add more details about your garage"
            android:id="@+id/et_garage_more_details"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">


        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"/>


        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_bottom_navigaton_view2"/>
    </RelativeLayout>



</RelativeLayout>